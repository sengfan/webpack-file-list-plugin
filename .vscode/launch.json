        {
            "type": "node",
            "request": "launch",
            "name": "launch webpack",
            "program": "${workspaceFolder}\\node_modules/webpack/bin/webpack.js",
            "args": [
                "--progress",
                "--config",
                "${workspaceFolder}/demo/webpack.dev.js",
                "--env.site=cb2"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch helper",
            "program": "${workspaceFolder}\\demo\\webpack.helper.js"
        }
